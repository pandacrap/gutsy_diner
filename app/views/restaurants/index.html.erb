<div class="container">
	<div class="row">
	  	<div class="col-md-8">	
		<table class="table table-striped">			
			<tr>
				<td>ID</td>
				<td>Name</td>
				<td>Ref</td>
			</tr>
			<% @restaurant.each do |r| %>
			<tr>
				<td><%= link_to "#{r.id}", r %></td>
				<td><%= r.name %></td>
				<td><%= r.ref %></td>			
			</tr>
			<% end %>
		</table>
		<%= will_paginate(@restaurant) %>
		</div>
	</div>
</div>
