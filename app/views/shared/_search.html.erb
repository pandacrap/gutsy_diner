
<%= form_tag("/search", method: "get", class: "navbar-form navbar-left", role: "search") do %>
			<div class="form-group">
				<% unless params[:query].nil? %>
					<%= text_field_tag :query, params[:query], :class => "form-control" %> 
				<% else %> 
					<%= text_field_tag :query, nil, :placeholder => "Search for", :class => "form-control" %>  
				<% end %>				
			</div>
			<div class="form-group">
				<% unless params[:location].nil? %>
					<%= text_field_tag :location, params[:location], :class => "form-control" %> 
				<% else %>				
					<%= text_field_tag :location, nil, :placeholder => "Near", :class => "form-control" %>  
				<% end %>
			</div>
			<%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
